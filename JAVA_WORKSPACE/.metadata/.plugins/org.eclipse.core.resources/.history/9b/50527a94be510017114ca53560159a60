package swing;

import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JTextArea;

public class ContentPaneEx extends JFrame {
	
	static int a = 0;
	boolean num = true;
	static JTextArea ta = new JTextArea(5,20);

	private static final long serialVersionUID = 1L;

	ContentPaneEx() {
		setTitle("ContentPane °ú JFrame");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JButton btn = new JButton("1");
		JButton btn1 = new JButton("2");
		JButton btn2 = new JButton("3");
		JButton btn3 = new JButton("4");
		JButton btn4 = new JButton("5");
		JButton btn5 = new JButton("6");
		JButton btn6 = new JButton("7");
		JButton btn7 = new JButton("8");
		JButton btn8 = new JButton("9");
		JButton btn9 = new JButton("0");
	
		Container contentPane = getContentPane();
		contentPane.setBackground(Color.ORANGE);
		contentPane.setLayout(new FlowLayout(FlowLayout.LEFT,30,40));
		
		btn.addActionListener(e->{
			if(num == true) {
				a=a*10+1;
			}
			ta.setText(""+a);
		});
		
		btn1.addActionListener(e->{
			if(num == true) {
				a=a*10+2;
			}
			ta.setText(""+a);
		});
		
		btn2.addActionListener(e->{
			if(num == true) {
				a=a*10+3;
			}
			ta.setText(""+a);
		});
		
		btn3.addActionListener(e->{
			if(num == true) {
				a=a*10+4;
			}
			ta.setText(""+a);
		});
		
		btn4.addActionListener(e->{
			if(num == true) {
				a=a*10+5;
			}
			ta.setText(""+a);
		});
		
		btn5.addActionListener(e->{
			if(num == true) {
				a=a*10+6;
			}
			ta.setText(""+a);
		});
		
		btn6.addActionListener(e->{
			if(num == true) {
				a=a*10+7;
			}
			ta.setText(""+a);
		});
		
		btn7.addActionListener(e->{
			if(num == true) {
				a=a*10+8;
			}
			ta.setText(""+a);
		});
		
		btn8.addActionListener(e->{
			if(num == true) {
				a=a*10+9;
			}
			ta.setText(""+a);
		});
		
		btn9.addActionListener(e->{
			if(num == true) {
				a=a*10+0;
			}
			ta.setText(""+a);
		});
		
		JButton op = new JButton("+");
		JButton op1 = new JButton("=");
		
		
		op.addActionListener(e->{
			
		});
		
		op1.addActionListener(e->{
			
		});
		
		contentPane.add(btn);
		contentPane.add(btn1);
		contentPane.add(btn2);
		contentPane.add(btn3);
		contentPane.add(btn4);
		contentPane.add(btn5);
		contentPane.add(btn6);
		contentPane.add(btn7);
		contentPane.add(btn8);
		contentPane.add(btn9);
		
		contentPane.add(op);
		contentPane.add(op1);
		contentPane.add(ta);
		
		
		setSize(600,300);
		setVisible(true);
	}
	
	public static onclick(int n){
		
	}
	
	public static void main(String[] args) {
		new ContentPaneEx();
	}
	
}
